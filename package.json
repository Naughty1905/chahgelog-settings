{
  "name": "cnahgelog-settings",
  "version": "2.1.0",
  "description": "repository for learning changelog",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "commit": "cz",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "release:major": "standard-version --release-as major"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Naughty1905/cnahgelog-settings.git"
  },
  "keywords": [
    "changelog",
    "git",
    "commitlint",
    "version"
  ],
  "author": "Istomin Ivan",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Naughty1905/cnahgelog-settings/issues"
  },
  "homepage": "https://github.com/Naughty1905/cnahgelog-settings#readme",
  "dependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "current-git-branch": "^1.1.0",
    "husky": "^7.0.0"
  },
  "devDependencies": {
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^6.3.0",
    "husky": "^7.0.0",
    "standard-version": "^9.3.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./config/commitizen.js"
    }
  }
}
